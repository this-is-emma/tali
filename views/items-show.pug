extends layout

block content
  .row
    .col-sm-4
      if item.picUrlSq
        //- img(src=item.picUrlSq).img-fluid
        if item.avatarUrl
          img.card-img-top(src=item.avatarUrl + '-square.', alt='Card image cap')
        else
          img.card-img-top(src=item.picUrlSq, alt='Card image cap')
    .col-sm-8
      h1=item.name
      p=item.type
      p=item.price
      p=item.description
      .text-right
        a(href="/items/" + item.id + "/edit").btn-link Edit
      form(action=`/items/${item._id}/purchase`, method='POST')
        script.stripe-button(src='https://checkout.stripe.com/checkout.js',
        data-key='pk_test_51NF5e1JWcWBt5hLru0nKvB5iaauDEwn6MtQbWsmARDUNYfQytcI9b7d6lUqYMWBjJQTfcjH69xaVRLIYBybZiPKR00X3puFeTP',
        data-amount=item.price*100,
        data-name='Tali',
        data-description='Widget',
        data-image='https://stripe.com/img/documentation/checkout/marketplace.png',
        data-locale='auto',
        data-zip-code='true')
      
