extends layout

block content
    
  .row.justify-content-center
    .col-sm-6
      legend New item
      form(action="#" id="new-item" required)
        .form-group
            label Name*
            input.form-control(name="name" required)
        .form-group
            label Type*
            input.form-control(name="type" required)
        .form-group
            label Avatar*
            input.form-control(name="avatar" type='file' required)
        .form-group
            label Rectangular Image URL*
            input.form-control(name="picUrl" required type="url") 
        .form-group
            label Square Image URL*
            input.form-control(name="picUrlSq" required type="url")   
        .form-group
            label Price*
            textarea.form-control(name="price" required)   
        .form-group
            label Description*
            textarea.form-control(name="description" minlength="100")   
        .form-group
            label Color*
            input.form-control(name="color" required) 
        .form-group
            label Product Code*
            input.form-control(name="productCode" required) 
        button(type="submit").btn.btn-primary Save